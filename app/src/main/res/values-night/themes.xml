<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoriBrianVianaChallenge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/purpleDark</item>
    </style>

    <style name="Theme.StoriBrianVianaChallenge" parent="Base.Theme.StoriBrianVianaChallenge" />
    <style name="Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TitleMain" parent="Title">
        <item name="android:fontFamily">@font/dancing</item>
    </style>
    <style name="TitleSuFaDialgo" parent="Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/RedDialog</item>
    </style>
    <style name="body" parent="TitleSuFaDialgo">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TitleSuDialgo" parent="Title">
        <item name="android:textColor">@color/GreenDialog</item>
    </style>
    <style name="TitleFaDialgo" parent="Title">
        <item name="android:textColor">@color/RedDialog</item>
    </style>
    <style name="bodyHeader" parent="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bodyItem" parent="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bodyTicket" parent="bodyItem">
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="share">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>